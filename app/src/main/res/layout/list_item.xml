<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.devpaul.materiallibrary.views.CircularTextView
        android:id="@+id/mat_lib_demo_circle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mat_lib_demo_text_view"
        tools:text="Item 0"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/mat_lib_demo_circle_text"
        android:layout_toRightOf="@id/mat_lib_demo_circle_text" />

</RelativeLayout>