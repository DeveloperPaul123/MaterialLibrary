<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaterialFABMenuItem">
        <attr name="mat_fab_item_icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MaterialFloatingActionButtonMenu">
        <attr name="mat_fab_menu_color" format="color"/>
        <attr name="mat_fab_menu_showChildrenAlways" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MaterialFloatingActionButton">
        <attr name="mat_fab_colorNormal" format="color"/>
        <attr name="mat_fab_colorPressed" format="color"/>
        <attr name="mat_fab_use_selector" format="boolean"/>
        <attr name="mat_fab_icon" format="reference"/>
        <attr name="mat_fab_title" format="string"/>
        <attr name="mat_fab_size" format="enum">
            <enum name="normal" value="0"/>
            <enum name="mini" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LinearFabMenu">
        <attr name="lin_fab_color_normal" format="color"/>
        <attr name="lin_fab_item_padding" format="dimension"/>
        <attr name="lin_fab_icon" format="reference"/>
        <attr name="lin_fab_exp_dir" format = "enum">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>
        <attr name="lin_fab_align" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="top" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <attr name="lin_fab_size" format="enum">
            <enum name="normal" value="0"/>
            <enum name="mini" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LinearFabMenuItem">
        <attr name="lin_fab_item_color" format="color"/>
        <attr name="lin_fab_item_icon" format="reference"/>
        <attr name="lin_fab_item_pressed_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="MaterialFlatButton">
        <attr name="mat_flat_button_text" format="string"/>
        <attr name="mat_flat_button_is_flat" format="boolean"/>
        <attr name="mat_flat_button_color" format="color"/>
    </declare-styleable>

</resources>